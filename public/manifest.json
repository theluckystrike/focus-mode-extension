{
  "manifest_version": 3,
  "name": "Focus Mode: Block Distractions & Stay Productive | Zovo",
  "version": "1.0.0",
  "description": "Block distracting websites, set focus timers, and boost productivity. Pomodoro timer built-in. Whitelist work sites and blacklist time-wasters.",

  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "alarms",
    "notifications"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Mode Pro",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "options_page": "options.html",

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "commands": {
    "toggle-focus": {
      "suggested_key": {
        "default": "Alt+Shift+F",
        "mac": "Alt+Shift+F"
      },
      "description": "Toggle Focus Mode on/off"
    }
  },

  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js", "blocked.css", "vendor.js", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
