{
  "manifest_version": 3,
  "name": "Focus Mode Pro - Block Distractions | Zovo",
  "short_name": "Focus Mode",
  "version": "1.0.0",
  "version_name": "1.0.0",
  "description": "Block distracting websites and boost productivity with focus timers. Built-in Pomodoro timer. Whitelist your work sites.",
  "author": "Zovo",
  "homepage_url": "https://zovo.one/tools/focus-mode-blocker",
  "minimum_chrome_version": "110",

  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "alarms",
    "notifications"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Mode Pro",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "commands": {
    "toggle-focus": {
      "suggested_key": {
        "default": "Alt+Shift+F",
        "mac": "Alt+Shift+F"
      },
      "description": "Toggle Focus Mode on/off"
    }
  },

  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js", "help.html", "help.js", "welcome.html", "welcome.js", "styles.css", "vendor.js", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
